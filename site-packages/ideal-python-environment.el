(defun ipython-start ()
  (set-buffer (make-term "IPython" "ipython" nil ))
  (term-mode)
  (term-char-mode)
  (switch-to-buffer "*IPython*")
)

(defun ipython (arg)
  (interactive "i")
  (setq ipy-window (get-buffer-window "*IPython*"))
  ;; If the IPython buffer is in a Window, select that window
  (cond (ipy-window
         (select-window ipy-window)
         ))
  ;; Start the ipython terminal
  (ipython-start)
)

(defun ideal-python-environment (arg)
  (interactive "P")  
  ;; Get the current buffer
  (setq current-buffer (current-buffer))
                                                                               
  ;; Build our windows
  (delete-other-windows)
  (setq left-window (selected-window))
  (setq right-window (split-window-horizontally)) 

  ;; Set the sizes of the windows
  (select-window left-window)
  (enlarge-window (- 80 (window-width)) 'horizontally)

  (select-window left-window)
  (switch-to-buffer current-buffer)
)


